{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "incremental": true
  },
  "include": ["src/**/*.ts", "src/bundle.json"],
  "exclude": ["node_modules", "dist"],
}